<body id="page-top">
    <div id="wrapper">
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <form class="form-inline">
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                            <i class="fa fa-bars"></i>
                        </button>
                    </form>

                    <form
                        class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..."
                                name="search">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button" onclick="searchAdmins()">
                                    Search
                                </button>
                            </div>
                        </div>
                    </form>
                </nav>

                <div class="container-fluid">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">ADMINS</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone No</th>
                                            <th>Blocked</th>
                                            <th>Hotels</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each owner}}
                                        <tr>
                                            <td>{{this.name}}</td>
                                            <td>{{this.email}}</td>
                                            <td>{{this.phone}}</td>
                                            <td>
                                                <div id="blockButton{{this._id}}">
                                                    {{#if this.is_block}}
                                                    <button class="btn btn-primary btn-block"
                                                        onclick="toggleBlock('{{this._id}}', false)">Unblock</button>
                                                    {{else}}
                                                    <button class="btn btn-warning btn-block"
                                                        onclick="toggleBlock('{{this._id}}', true)">Block</button>
                                                    {{/if}}
                                                </div>
                                            </td>
                                            <td>
                                                <a href="/admin/owner/hotels?id={{this._id}}"
                                                    class="btn btn-primary btn-block">view</a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

{{> userFooter}}


{{!-- BLOCK AND UNBLOCK OWNER --}}
<script>
    function toggleBlock(adminId, blockStatus) {
        event.preventDefault();
        axios.post('/admin/owners/block?id=' + adminId, {
            blockStatus: blockStatus
        })
            .then(function (response) {
                // Handle the response here, if needed
                const blockButton = document.getElementById('blockButton' + adminId);
                if (blockStatus) {
                    blockButton.innerHTML = '<button class="btn btn-primary btn-block" onclick="toggleBlock(\'' + adminId + '\', false)">Unblock</button>';
                } else {
                    blockButton.innerHTML = '<button class="btn btn-warning btn-block" onclick="toggleBlock(\'' + adminId + '\', true)">Block</button>';
                }
            })
            .catch(function (error) {
                alertify.alert("Something went wrong", function () {
                    alertify.message('OK');
                });
                console.log(error);
            });
    }


</script>


{{!-- SEARCH OWNER --}}
<script>
    function searchAdmins() {
        event.preventDefault();
        const searchInput = document.querySelector('input[name="search"]').value;
        axios.post('/admin/owners/search', { search: searchInput }, {
            headers: {
                'Content-Type': 'application/json'
            }
        })
            .then(function (response) {
                const searchResults = response.data;
                updateTable(searchResults);
            })
            .catch(function (error) {
                alertify.alert("Something went wrong", function () {
                    alertify.message('OK');
                })
                console.log(error);
            });
    }

    function updateTable(searchResults) {
        const tableBody = document.querySelector('#dataTable tbody');
        tableBody.innerHTML = '';

        searchResults.forEach(function (admin) {
            const row = document.createElement('tr');

            const nameCell = document.createElement('td');
            nameCell.textContent = admin.name;
            row.appendChild(nameCell);

            const emailCell = document.createElement('td');
            emailCell.textContent = admin.email;
            row.appendChild(emailCell);

            const phoneCell = document.createElement('td');
            phoneCell.textContent = admin.phone;
            row.appendChild(phoneCell);

            const blockCell = document.createElement('td');
            const blockButton = document.createElement('button');
            blockButton.className = admin.is_block ? 'btn btn-primary btn-block' : 'btn btn-warning btn-block';
            blockButton.textContent = admin.is_block ? 'Unblock' : 'Block';
            blockButton.addEventListener('click', function () {
                toggleBlock(admin._id, !admin.is_block);
            });
            blockCell.appendChild(blockButton);
            row.appendChild(blockCell);

            const hotelsCell = document.createElement('td');
            const viewButton = document.createElement('a');
            viewButton.className = 'btn btn-primary btn-block';
            viewButton.textContent = 'View';
            viewButton.href = '/admin/owner/hotels?id=' + admin._id;
            hotelsCell.appendChild(viewButton);
            row.appendChild(hotelsCell);

            tableBody.appendChild(row);
        });
    }
</script>