{{>userHeader}}

<body class="bg-gradient-light">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            {{#if owner}}
                            <form class="user" method="post" action="/owner/otp">
                                {{else}}
                                <form class="user" method="post" action="/otp">
                                    {{/if}}
                                    <div class="form-group">
                                        <input id="name" class="form-control form-control-user" type="text"
                                            placeholder="Name" name="name" onblur="nameValidation()" required>
                                        <span id="nameError" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input id="userEmail" class="form-control form-control-user" type="email"
                                            placeholder="Email Address" name="email" onblur="emailValidation()"
                                            required>
                                        <span id="emailError" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input id="phoneNumber" class="form-control form-control-user" type="tel"
                                            placeholder="Phone No" name="phone" onblur="phoneNumberValidation()"
                                            required>
                                        <span id="phoneNumberError" class="text-danger"></span>
                                    </div>
                                    {{#if owner}}
                                    <div class="form-group">
                                        <input id="upi" class="form-control form-control-user" type="tel"
                                            placeholder="upi" name="upi" onblur="upiValidation()" required>
                                        <span id="upiError" class="text-danger"></span>
                                    </div>
                                    {{/if}}
                                    <div class="form-group">
                                        <input id="Password" class="form-control form-control-user" type="password"
                                            placeholder="Password" name="password" onblur="passwordValidation()"
                                            required>
                                        <span id="passwordError" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input id="password2" class="form-control form-control-user" type="password"
                                            placeholder="Re-enter Password" required>
                                        <span id="password2Error" class="text-danger"></span>
                                    </div>
                                    {{#if message}}
                                    <p>{{message}}</p>
                                    {{/if}}
                                    <button class="btn btn-primary btn-user btn-block" type="submit"
                                        onclick="return submitValidation()">Submit</button>

                                </form>
                            </form>
                            <hr>
                            {{#if owner}}
                            <a class="small" href="/owner">Already have an account? Login!</a>
                            {{else}}
                            <a class="small" href="/login">Already have an account? Login!</a>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    {{>userFooter}}
    <style>
        span {
            font-size: small
        }
    </style>