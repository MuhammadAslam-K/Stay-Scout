{{>userHeader}}

<body class="bg-gradient-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2"></h1>
                                        <h1>Verify email</h1>
                                        <p>Please enter the one-time password<br>sent to your email</p>
                                    </div>
                                    {{#if passwordRecovery }}
                                    <form class="user" method="post" action="/verifyotp">
                                        {{else if owner}}
                                        <form class="user" method="post" action="/owner/submitOtp">
                                            {{else}}
                                            <form class="user" method="post" action="/submitOtp">
                                                {{/if}}
                                                <div class="form-group">
                                                    <input id="otp" type="tel" class="form-control form-control-user"
                                                        name="OTP" placeholder="Enter OTP..." required>
                                                    <span id="otpError" class="text-danger"></span>
                                                </div>
                                                {{#if message }}
                                                <p>
                                                    {{ message }}
                                                </p>
                                                {{/if}}
                                                <button type="submit" class="btn btn-primary btn-user btn-block"
                                                    onclick="return otpValidation()">Submit</button>
                                            </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
{{>userFooter}}

<style>
    span {
        font-size: small
    }
</style>