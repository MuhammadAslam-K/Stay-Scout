{{>userHeader}}

<body class="bg-gradient-light">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user" id="signupForm">

                                <div class="form-group">
                                    <input id="name" class="form-control form-control-user" type="text"
                                        placeholder="Name" name="name" required>
                                    <span id="nameError" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input id="email" class="form-control form-control-user" type="email"
                                        placeholder="Email Address" name="email" required>
                                    <span id="emailError" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input id="phoneNumber" class="form-control form-control-user" type="tel"
                                        placeholder="Phone No" name="phone" required>
                                    <span id="phoneError" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input id="Password" class="form-control form-control-user" type="password"
                                        placeholder="Password" name="password" required>
                                    <span id="passwordError" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input id="password2" class="form-control form-control-user" type="password"
                                        placeholder="Re-enter Password" name="password2" required>
                                    <span id="password2Error" class="text-danger"></span>
                                </div>
                                <button class="btn btn-primary btn-user btn-block" type="submit">Submit</button>

                            </form>
                            {{#if messages.error}}
                            <div class="text-danger">{{messages.error}}</div>
                            {{/if}}
                            <hr>
                            <a class="small" href="/login">Already have an account? Login!</a>

                            <a href="/auth/google" class="btn btn-google btn-user btn-block">
                                <i class="fab fa-google fa-fw"></i> Register with Google
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    {{>userFooter}}
    <style>
        span {
            font-size: small
        }
    </style>

    <script src="/js/axios.min.js"></script>


    <script>
        const handleSubmit = async (event) => {
            event.preventDefault();

            const formData = new FormData(event.target);

            try {
                const response = await axios.post('/otp', formData, {
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })

                if (response.status === 200) {
                    window.location.href = '/otp'
                }

            } catch (error) {

                if (error.response.status == 400) {

                    const errors = error.response.data.error;

                    Object.keys(errors).forEach((key) => {
                        let element = document.getElementById(key).textContent = errors[key];
                    });
                }
                else if (error.response.status == 401) {
                    document.getElementById('emailError').textContent = error.response.data.error;
                }
                else if (error.response.status == 409) {
                    document.getElementById('password2Error').textContent = error.response.data.error;
                }
                else {
                    alert("something went wrong");
                }

            }
        };
        document.getElementById('signupForm').addEventListener('submit', handleSubmit);

    </script>